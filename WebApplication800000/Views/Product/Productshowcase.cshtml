@using WebApplication800000.Controllers
@using System.Threading.Tasks
@{
    ViewBag.Title = "Productshowcase";
}
<h2>Productshowcase</h2>
<!DOCTYPE html>
<html>
<head>
    <title>To Do Items</title>
    <style>
        table {
            font-family: arial, sans-serif;
            border-collapse: collapse;
            width: 100%;
        }

        td, th {
            border: 1px solid #dddddd;
            text-align: left;
            padding: 8px;
        }

        tr:nth-child(even) {
            background-color: #dddddd;
        }
    </style>
</head>
<body>
   

        <table>
            <tr>
                <th>Name</th>
                <th>Catagory</th>
                <th>Price</th>
                <th>Manufactorer</th>
                <th>Add to cart</th>
            </tr>
            @foreach (var x in ProductController.products)
            {
                <tr>
                    <td><tc>@x.Name</tc></td>
                    <td><tc>@x.Catagory</tc></td>
                    <td><tc>$@x.Price</tc></td>
                    <td><tc>@x.Manufactorer</tc></td>
                    @*<td><tc><button name="addtocart" type=submit value="Add To Cart" style="width:100%">HTML</button></tc></td>*@
                    <td><tc>@Html.ActionLink("addtocart", "ikShop", "Product", new { m = x.products_id}, null)</tc></td>

                </tr>
            }
        </table>
</body>
</html>
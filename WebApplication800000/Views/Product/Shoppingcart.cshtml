@using WebApplication800000.Controllers
@{
    ViewBag.Title = "ShoppingCart";
}
<h2>Shopping Cart</h2>
<!DOCTYPE html>
<html>
<head>
    <style>
        table {
            font-family: arial, sans-serif;
            border-collapse: collapse;
            width: 100%;
        }

        td, th {
            border: 1px solid #dddddd;
            text-align: left;
            padding: 8px;
        }

        tr:nth-child(even) {
            background-color: #dddddd;
        }
        h3 {
            text-align: right;
        }
    </style>
</head>
<body>
    <table>
        <tr>
            <th>Name</th>
            <th>Catagory</th>
            <th>Price</th>
            <th>Manufactorer</th>
            <th>Remove</th>
        </tr>
        @foreach (var x in ProductController.addedproducts)
        {
            <tr>
                <td><tc>@x.Name</tc></td>
                <td><tc>@x.Catagory</tc></td>
                <td><tc>$@x.Price</tc></td>
                <td><tc>@x.Manufactorer</tc></td>
                <td><tc>@Html.ActionLink("Remove", "remShop", "Product", new { m = x.products_id }, null)</tc></td>
            </tr>
        }

    </table>

    <h3><b>@Html.ActionLink("Checkout", "BuyProducts", "Product")</b></h3>


</body>
</html>